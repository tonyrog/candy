%% -*- erlang -*-
%% can setup for candy reverse enginer car bitrate 500 Kbit/s
[
 {lager, [
	  %% {log_root, "/var/erlang/candy/log"}, %% on target
	  {log_root, "log"}, %% in development environment
	  {handlers, [
		      {lager_console_backend, 
		        [info, {lager_default_formatter, 
		       		[date, " ", time," [",severity,"] ",pid, " ", 
		       		 module, ":", line, " ", message, "\n"]}]},
		      {lager_file_backend,
		       [{file, "error.log"}, {level, error}, 
			{size, 10485760}, {date, "$D0"}, {count, 5}]},
		      {lager_file_backend,
		       [{file, "console.log"}, {level, info}, 
			{size, 10485760}, {date, "$D0"}, {count, 5}]}
		     ]}
	  ]},
 %% status_interval = undefined  CANUSB may sometime lock up on status command
 {can, [
	{interfaces,
	 [
	  {can_udp, 0, [{ttl,0}]},

	  {can_usb, 1, 
	   [{device,"/dev/serial/by-id/usb-LAWICEL_CANUSB_*-if00-port0"},
	    {bitrate,250000},
	    {status_interval,undefined}
	   ]},

	  {can_sock, 2, 
	   [{device,"can0"},
	    {bitrate,500000},
	    {fd,true},
	    {datarate,2000000},
	    {listen_only,false},
	    {restart_ms, 100}
	   ]},

	  {can_sock, 3,
	   [{device,"vcan0"},
	    {bitrate,500000},
	    {fd,false},
	    {listen_only,true}
	   ]}

	 ]}
       ]}
].
